@model IEnumerable<AccountKeep.Models.Transaction>

@{
    ViewBag.Title = "Transactions";
    int accountId = ViewBag.AccountId;
}

<h2>Transactions</h2>

<div class="mb-3 d-flex justify-content-between align-items-center">
    <a asp-action="Create" asp-route-accountId="@accountId" class="btn btn-success">
        <i class="bi bi-plus-lg"></i> Add New Transaction
    </a>

    <a asp-controller="Accounts" asp-action="Details" asp-route-personId="@ViewBag.PersonId" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Accounts
    </a>
</div>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Description</th>
            <th>Capture Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.TransactionDate.ToString("yyyy-MM-dd")</td>
                <td>@t.Amount.ToString("C")</td>
                <td>@t.Description</td>
                <td>@t.CaptureDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td class="d-flex gap-1">
                    <!-- Edit: pencil icon -->
                    <a asp-action="Edit" asp-route-id="@t.TransactionId" class="btn btn-sm btn-primary" title="Edit">
                        <i class="bi bi-pencil"></i>
                    </a>

                    <form asp-action="Delete" asp-route-id="@t.TransactionId" method="post"
                          onsubmit="return confirm('Are you sure you want to delete this transaction?');" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
