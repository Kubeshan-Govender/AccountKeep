@model AccountKeep.Models.Transaction

<h2>Delete Transaction</h2>

<div>
    <h4>Are you sure you want to delete this transaction?</h4>
    <dl class="row">
        <dt class="col-sm-2">Account Number</dt>
        <dd class="col-sm-10">@Model.Account?.AccountNumber</dd>

        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.Amount.ToString("C")</dd>

        <dt class="col-sm-2">Transaction Date</dt>
        <dd class="col-sm-10">@Model.TransactionDate.ToShortDateString()</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="TransactionId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Details" asp-route-accountId="@Model.AccountId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
