@model AccountKeep.Models.Transaction

<h2>Add Transaction</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="AccountId" />

    <div class="form-group mb-2">
        <label asp-for="TransactionDate"></label>
        <input asp-for="TransactionDate" class="form-control" type="date" />
        <span asp-validation-for="TransactionDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Add</button>
    <a asp-action="Details" asp-route-accountId="@Model.AccountId" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
