@model IEnumerable<AccountKeep.Models.Person>

@{
    ViewData["Title"] = "Persons List";
}

<h2>Persons</h2>

<div class="d-flex justify-content-between mb-3">
    <form method="get" class="d-flex">
        <input type="text" name="search" value="@ViewContext.HttpContext.Request.Query["search"]"
               placeholder="Search ID, surname, account number" class="form-control me-2" />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
    <a href="@Url.Action("Create")" class="btn btn-success">Add New Person</a>
</div>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>ID Number</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Accounts</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.IdNumber</td>
                <td>@person.FirstName @person.Surname</td>
                <td>@person.Email</td>
                <td>@person.PhoneNumber</td>
                <td>@person.Accounts.Count()</td>
                <td class="d-flex gap-1">
                    <!-- Edit: pencil icon -->
                    <a href="@Url.Action("Edit", new { id = person.PersonId })" class="btn btn-sm btn-primary" title="Edit">
                        <i class="bi bi-pencil"></i>
                    </a>

                    
                    <a href="@Url.Action("Details", "Accounts", new { personId = person.PersonId })" class="btn btn-sm btn-info">Accounts</a>

                    <!-- Delete: trash icon -->
                    <form asp-action="Delete" asp-route-id="@person.PersonId" method="post" onsubmit="return confirm('Are you sure you want to delete this person?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
