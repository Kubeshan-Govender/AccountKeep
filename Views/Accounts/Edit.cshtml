@model AccountKeep.Models.ViewModels.AccountEditViewModel

<h2>Edit Account</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="AccountId" />
    <input type="hidden" asp-for="PersonId" />

    <div class="mb-2">
        <label>Account Number</label>
        <input class="form-control" value="@Model.AccountNumber" disabled />
    </div>

    <div class="mb-2">
        <label asp-for="AccountType"></label>
        <input asp-for="AccountType" class="form-control" />
    </div>

    <div class="mb-2">
        <label>Balance</label>
        <input class="form-control" value="@Model.Balance" disabled />
    </div>

    <div class="mb-2">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control">
            <option value="Open">Open</option>
            <option value="Closed">Closed</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Details" asp-route-personId="@Model.PersonId" class="btn btn-secondary">Cancel</a>
</form>
