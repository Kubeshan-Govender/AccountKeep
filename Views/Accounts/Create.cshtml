@model AccountKeep.Models.Account

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PersonId" />

    <div class="form-group mb-2">
        <label asp-for="AccountNumber"></label>
        <input asp-for="AccountNumber" class="form-control" />
        <span asp-validation-for="AccountNumber" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="AccountType"></label>
        <input asp-for="AccountType" class="form-control" />
        <span asp-validation-for="AccountType" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control">
            <option value="Open">Open</option>
            <option value="Closed">Closed</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Details" asp-route-personId="@Model.PersonId" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
